{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": ["es2021", "dom"],
    "outDir": "./dist",
    "strict": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "esModuleInterop": true,
